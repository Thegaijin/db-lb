{
  "variables": {
    "service_account_json": "../../shared/account.json",
    "project_id": "{{env `PROJECT_ID`}}"
  },
  "builders": [
    {
      "type": "googlecompute",
      "project_id": "{{user `project_id`}}",
      "machine_type": "n1-standard-1",
      "source_image": "ubuntu-1604-xenial-v20190306",
      "region": "europe-west1",
      "zone": "europe-west1-b",
      "ssh_username": "ubuntu",
      "image_description": "db image load balancer master",
      "image_family": "ubuntu-1604-lts",
      "image_name": "db-lb-master-{{timestamp}}",
      "disk_size": 10,
      "account_file": "{{ user `service_account_json`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "./install_psql.sh"
    },
    {
      "type": "file",
      "source": "postgresql.conf",
      "destination": "/home/ubuntu/postgresql.conf"
    },
    {
      "type": "shell",
      "script": "./conf.sh"
    }
  ]
}
